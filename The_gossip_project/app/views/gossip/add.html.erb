<div class="container">
  <h1 class="mt-3 row justify-content-center">Ajoutez un gossip</h1>
</div>

<div class="container mt-3">
  <div class="row justify-content-center">
    <form action="/gossip/add" class="border rounded p-3 col-6" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <% unless flash.alert == nil %>
        <% unless flash[:alert]["author"] == nil %>
          <div class="alert alert-danger">
            <%= flash[:alert]["author"] %>
          </div>
        <% end %>
      <% end %>
      <div class="form-group">
        <label for="author">Auteur</label>
        <input type="text" class="form-control" id="author" name="author" placeholder="Entrer le nom de l'auteur">
      </div>
      <% unless flash.alert == nil %>
        <% unless flash[:alert]["content"] == nil %>
          <div class="alert alert-danger">
            <%= flash[:alert]["content"] %>
          </div>
        <% end %>
      <% end %>
      <div class="form-group">
        <label for="content">Contenu</label>
        <textarea class="form-control" id="content" name="content" row=3></textarea>
      </div>
      <button type="submit" class="btn col-12 btn-dark">Ajouter</button>
    </form>
  </div>
</div>
