<div class="container">
  <h1 class="mt-3 row justify-content-center">Modifiez le gossip numéro n°<%= @gossip.id %></h1>
</div>

<div class="container mt-3">
  <div class="row justify-content-center">
    <%= form_tag("/gossip/update", method: "put", class: "border rounded p-3 col-6") do %>
      <input type="hidden" name="id" value="<%= @gossip.id %>">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <% unless flash.alert == nil %>
        <% unless flash[:alert]["author"] == nil %>
          <div class="alert alert-danger">
            <%= flash[:alert]["author"] %>
          </div>
        <% end %>
      <% end %>
      <div class="form-group">
        <label for="author">Auteur</label>
        <input type="text" class="form-control" id="author" name="author" placeholder="Entrer le nom de l'auteur" value="<%= @gossip.author %>">
      </div>
      <% unless flash.alert == nil %>
        <% unless flash[:alert]["content"] == nil %>
          <div class="alert alert-danger">
            <%= flash[:alert]["content"] %>
          </div>
        <% end %>
      <% end %>
      <div class="form-group">
        <label for="content">Contenu</label>
        <textarea class="form-control" id="content" name="content" row=3 ><%= @gossip.content %></textarea>
      </div>
      <button type="submit" class="btn col-12 btn-dark">Ajouter</button>
    <% end %>
  </div>
  <div class="row">
    <div class="offset-3">
      <a href="/">Retour</a>
    </div>
  </div>
</div>
